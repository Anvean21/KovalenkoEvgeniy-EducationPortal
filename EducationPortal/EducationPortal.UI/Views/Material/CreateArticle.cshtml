@model EducationPortal.UI.Models.ArticleMaterialVM

@{
    ViewData["Title"] = "Add Article";
}
@{
    Layout = "ArticleMaterialLayout";
}
<div class="clsd">
    <h1 class="mainWord">Add Article</h1>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateArticle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label backgroundcolor"></label>
                <input asp-for="Name" class="form-control inputColor" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resource" class="control-label backgroundcolor"></label>
                <input asp-for="Resource" class="form-control inputColor" />
                <span asp-validation-for="Resource" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublishDate" class="control-label backgroundcolor"></label>
                <input asp-for="PublishDate" class="form-control inputColor" />
                <span asp-validation-for="PublishDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Book" class="btn btn-light" />
            </div>

        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
