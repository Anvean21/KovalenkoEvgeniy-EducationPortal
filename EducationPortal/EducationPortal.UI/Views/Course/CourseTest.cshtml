@model EducationPortal.UI.Models.CourseVM

@{
    ViewData["Title"] = "CourseTest";
}

<h1>CourseTest</h1>
@TempData["success"]
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CourseTest">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div class="col">
                @foreach (var item in ViewBag.Test)
                {
                    @item.Name <a class="btn btn-outline-info" asp-action="AddTest" asp-route-courseId=@Model.Id asp-route-TestId=@item.Id>Add</a>
                }
            </div>
        </form>
    </div>
</div>

