@model EducationPortal.UI.Models.CourseVM

@{
    ViewData["Title"] = "CourseMaterials";
}

<h1>CourseMaterials</h1>
@TempData["success"]
@TempData["nullMaterials"]
<hr />
<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="Name" class="form-control" readonly />
        </div>
        <div class="form-group">
            <input asp-for="Description" class="form-control" readonly />
        </div>
    </div>
    <div class="row">
        <div class="col">
            @foreach (var item in ViewBag.Videos)
            {
                <p>
                    @item.Name <a class="btn btn-outline-info" asp-action="AddMaterial" asp-route-courseId=@Model.Id asp-route-materialId=@item.Id>Add</a>
                </p>
            }
        </div>
        <div class="col">

            @foreach (var item in ViewBag.Articles)
            {
                <p>
                    @item.Name <a class="btn btn-outline-dark" asp-action="AddMaterial" asp-route-courseId=@Model.Id asp-route-materialId=@item.Id>Add</a>
                </p>
            }
        </div>
        <div class="col">
            @foreach (var item in ViewBag.Books)
            {
                <p>
                    @item.Name <a class="btn btn-outline-secondary" asp-action="AddMaterial" asp-route-courseId=@Model.Id asp-route-materialId=@item.Id>Add</a>
                </p>
            }
        </div>
    </div>
</div>
<div> @Html.ActionLink("Add Skills", "CourseSkills", "Course", new { id = Model.Id }, new { @class = "btn btn-success align-self-center" })</div>


