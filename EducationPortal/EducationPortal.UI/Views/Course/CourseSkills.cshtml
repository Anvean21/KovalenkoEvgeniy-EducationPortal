@model EducationPortal.UI.Models.CourseVM

@{
    ViewData["Title"] = "CourseSkills";
}

<h1>CourseSkills</h1>
@TempData["success"]
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CourseSkills">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div>
                @foreach (var item in ViewBag.Skills)
                {
                    @item.Name <a class="btn btn-outline-info" asp-action="AddSkill" asp-route-courseId=@Model.Id asp-route-skillId=@item.Id>Add</a>
                }
            </div>
        </form>
    </div>
</div>

<div> @Html.ActionLink("Add Test", "CourseTest", "Course", new { id = Model.Id })</div>
