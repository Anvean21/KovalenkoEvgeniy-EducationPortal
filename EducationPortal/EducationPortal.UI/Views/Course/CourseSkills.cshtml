@model EducationPortal.UI.Models.CourseVM

@{
    ViewData["Title"] = "CourseSkills";
}

<h1>CourseSkills</h1>
<h2>
    @TempData["success"]
    @TempData["nullSkills"]
</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CourseSkills">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Name" class="form-control" readonly />
            </div>
            <div class="form-group">
                <input asp-for="Description" class="form-control" readonly />
            </div>
            <div>
                @foreach (var item in ViewBag.Skills)
                {
                    <p>
                        @item.Name <a class="btn btn-outline-info" asp-action="AddSkill" asp-route-courseId=@Model.Id asp-route-skillId=@item.Id>Add</a>
                    </p>
                }
            </div>
        </form>
    </div>
</div>

<div> @Html.ActionLink("Add Test", "CourseTest", "Course", new { id = Model.Id })</div>
