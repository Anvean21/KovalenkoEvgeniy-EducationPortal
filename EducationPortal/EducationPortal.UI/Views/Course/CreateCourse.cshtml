@model EducationPortal.UI.Models.CourseVM
@inject EducationPortal.Services.Interfaces.IMaterialService Material
@{
    ViewData["Title"] = "Create Course";
}
<h1>Create Course</h1>

<hr />
<div class="row">
    <div class="col-md-9">
        <form asp-action="CreateCourse">
            <div class="col-sm-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Add materials to Course" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}