@model IEnumerable<EducationPortal.UI.Models.CourseVM>

@{
    ViewData["Title"] = "CourseList";
}

<h1>CourseList</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Skills)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @string.Join(", ", item.Skills.Select(x => x.Name))
            </td>
            <td>
                @Html.ActionLink("Pass", "PassCourse", new { courseId = item.Id }) 
            </td>
        </tr>
}
    </tbody>
</table>
