@model EducationPortal.UI.Models.SkillVM



<div class="col-sm-2">
    <h4 class="skillColor">Add Skill</h4>
    <form asp-action="CreateSkill">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="Name" class="form-control" placeholder="skill name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Add Skill" class="btn btn-outline-light" />
        </div>
    </form>
</div>



