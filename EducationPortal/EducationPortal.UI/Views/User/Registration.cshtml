@model EducationPortal.UI.Models.UserVM

@{
    ViewData["Title"] = "Registration";
}
@{
    Layout = null;

}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V2</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" type="text/css" href="~/css/main.css">

</head>
<body>

    <hr />
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <form asp-action="Registration" class="form-horizontal">
                <span class="heading">Registration</span>
                <div class="form-group">
                    <input asp-for="Name" class="form-control" id="inputEmail" placeholder="User Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <i class="fa fa-user"></i>
                </div>
                <div class="form-group">
                    <input asp-for="Email" type="email" class="form-control" id="inputEmail" placeholder="E-mail">
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <i class="fa fa-user"></i>
                </div>
                <div class="form-group help">
                    <input asp-for="Password" type="password" class="form-control" id="inputPassword" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <i class="fa fa-lock"></i>
                </div>
                <div class="form-group">
                    <div class="main-checkbox">
                        <input type="checkbox" value="none" id="checkbox1" name="check" />
                        <label for="checkbox1"></label>
                    </div>
                    <span class="text">Remember me</span>
                    <button type="submit" class="btn btn-primary">Sing Up</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

